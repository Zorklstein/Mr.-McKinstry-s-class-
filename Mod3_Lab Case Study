class Duck():
    def __init__(self,inputName):
        self.hiddenName = inputName
    
    def getName(self):
        print("inside the getter")
        return self.hiddenName
    
    def setName(self, inputName):
        print("in the setter")
        self.hiddenName = inputName
        
don = Duck("donald")
print(don.getName())
don.setName("daffy")

